<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_common_form_inherited" model="ir.ui.view">
        <field name="name">product.template.common.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position='after'>
                <page string="Product's specific properties">
                    <group>
                        <field name="product_template_property_ids" widget="one2many_tags">
                            <tree editable="bottom">
                                <field name="property_name"/>
                                <field name="property_value"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_product_tree_inherited" model="ir.ui.view">
        <field name="name">product.template.product.tree.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="get_required_mold"/>
            </xpath>
        </field>
    </record>

</odoo>