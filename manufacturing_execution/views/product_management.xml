<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_product_category_group" model="ir.actions.act_window">
        <field name="name">Product Category Groups</field>
        <field name="res_model">product.category.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new product category group.
            </p>
        </field>
    </record>

    <record id="action_product_category" model="ir.actions.act_window">
        <field name="name">Product Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new product category.
            </p>
        </field>
    </record>

    <record id="action_product_product" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new product variant.
            </p>
        </field>
    </record>

    <record id="view_product_category_group_form" model="ir.ui.view">
        <field name="name">product.category.group.form</field>
        <field name="model">product.category.group</field>
        <field name="arch" type="xml">
            <form string="Product Category Group">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="server_action_product_template" model="ir.actions.server">
        <field name="name">Custom Import Products</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="product.model_product_category"/>
        <field name="binding_model_id" ref="product.model_product_category"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_window',
                'name': 'Import Product Templates',
                'res_model': 'product.template.import',
                'target': 'new',
                'views': [(env.ref('manufacturing_execution.view_product_template_import').id, 'form')],
            }
        </field>
    </record>

    <record id="view_product_category_form_inherit" model="ir.ui.view">
        <field name="name">product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']/field[@name='parent_id']" position="after">
                <field name="product_category_group_id"/>
            </xpath>
            <xpath expr="//group[@name='first']/field[@name='parent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <sheet>
                <field name="product_template_ids"/>
            </sheet>
        </field>
    </record>

    <menuitem id="menu_product_category_group"
              name="Product Category Groups"
              action="action_product_category_group"
              parent="mrp.menu_mrp_bom"
              sequence="1"/>

    <menuitem id="menu_product_category"
              name="Product Categories"
              action="action_product_category"
              parent="mrp.menu_mrp_bom"
              sequence="2"/>

    <menuitem id="menu_product_product"
              name="Product Variants"
              action="action_product_product"
              parent="mrp.menu_mrp_bom"
              sequence="6"/>

</odoo>

